<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notifications</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/stylesheets/notification.css">
</head>
<body>
    <div class="notification-container">
        <a href="/home"><i id="back-arrow" class="fa-solid fa-arrow-left"></i></a>
        <h1>Notifications</h1>

        <div class="section">
            <h2>New</h2>
            <div class="notification">
                <img src="user1.jpg" alt="levileon">
                <div class="content">
                    <p><strong>levileon</strong> started following you. <span>34m</span></p>
                </div>
                <button class="follow-btn">Follow Back</button>
            </div>
            <div class="notification">
                <img src="user2.jpg" alt="halukman">
                <div class="content">
                    <p><strong>halukman</strong> started following you. <span>2h</span></p>
                </div>
                <button class="follow-btn">Follow Back</button>
            </div>
            <div class="notification">
                <img src="user3.jpg" alt="mbestra">
                <div class="content">
                    <p><strong>mbestra</strong> liked your reel. <span>6h</span></p>
                    <img class="thumbnail" src="reel-thumbnail.jpg" alt="Reel Thumbnail">
                </div>
            </div>
        </div>

        <div class="section">
            <h2>Yesterday</h2>
            <div class="notification">
                <img src="user4.jpg" alt="verna.dare">
                <div class="content">
                    <p><strong>verna.dare</strong> liked your story. <span>13h</span></p>
                </div>
            </div>
            <div class="notification">
                <img src="user5.jpg" alt="avian.design">
                <div class="content">
                    <p><strong>avian.design</strong> liked your story. <span>16h</span></p>
                </div>
            </div>
            <div class="notification">
                <img src="user6.jpg" alt="kretastudio">
                <div class="content">
                    <p><strong>kretastudio</strong> liked your story. <span>16h</span></p>
                </div>
            </div>
            <div class="notification">
                <img src="user7.jpg" alt="fateme_ahmadi">
                <div class="content">
                    <p><strong>fateme_ahmadi</strong> started following you. <span>16h</span></p>
                </div>
                <button class="following-btn">Following</button>
            </div>
        </div>

        <div class="section">
            <h2>Last 7 days</h2>
            <div class="notification">
                <img src="user8.jpg" alt="zahrakan">
                <div class="content">
                    <p><strong>zahrakan</strong> liked your post. <span>2d</span></p>
                </div>
            </div>
        </div>
    </div>

    <script>
document.addEventListener('DOMContentLoaded', function () {
    const body = document.body;
    const backArrow = document.getElementById('back-arrow');

    // Add 'show' class to the body to trigger the entrance transition
    setTimeout(() => {
        body.classList.add('show');
    }, 50); // Small delay for animation to start

    // Handle smooth exit when back arrow is clicked
    backArrow.addEventListener('click', function (event) {
        event.preventDefault(); // Prevent immediate navigation
        body.classList.remove('show'); // Start hiding animation

        // After the animation completes, redirect to home page
        setTimeout(() => {
            window.location.href = '/home';
        }, 150); // Shorter duration for the exit
    });
});

    </script>
</body>
</html>
